<div class="card text-dark bg-light" style="width: 100%;">
  <div class="card-header text-white bg-info">
    <div class="display-4 text-center"> <%= header %> </div>
  </div>
  <div class="card-body">
    <%= simple_form_for(@product) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name, required: true %>
        <%= f.input :description, required: true, :input_html => {:rows => 5} %>
        <%= f.input :category_id, required: true, collection: Category.order(:name), prompt: "Select Category" %>
        <%= f.input :brand, required: true %>
        <%= f.input :price, required: true %>
        <%= f.input :images, as: :file, :input_html => {multiple: true} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-info my-4" %>
      </div>
    <% end %>
  </div>
</div>
